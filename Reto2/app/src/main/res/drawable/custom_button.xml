<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ff3366" />
            <gradient android:angle="-90" android:startColor="#ff3366" android:endColor="#ff5d69"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ff3366" />
            <solid android:color="#ff3366"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ff5d69" />
            <gradient android:angle="-90" android:startColor="#ff5d69" android:endColor="#ff3366" />
        </shape>
    </item>
</selector>